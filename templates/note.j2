{% block styles %}
<style>:root{ --background-color: {{ theme_background_color|default("#F8F7F6") }} }</style>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{ _static_url }}/base.css">
<link rel="stylesheet" href="{{ _static_url }}/entry.css">
{% include "components/clipboard-copy.j2" %}
{% endblock %}

{% block scripts %}
<script src="{{ _static_url }}/app.js" type="module"></script>
{% include "components/iconify-icon.j2" %}
{% include "components/lightbox.j2" %}
{% endblock %}

{% macro render_authors(authors, size=48) %}
  {% for author in authors %}
    <span class="p-author h-card">
      <a class="u-url p-name" href="{{ author.url }}">
        {% if author.avatar %}
          <img class="u-photo" src="{{ author.avatar|thumbnail('ss') }}" width="{{ size }}" height="{{ size }}" alt="{{ author.name }}">
        {% endif %}
      </a>
    </span>
  {% endfor %}
{% endmacro %}

{% block body %}
  {% include "./_layouts/site-head.j2" %}
  <article role="main" class="h-entry mt-8">
    {% if note.audio %}
      {% include "./_partials/episode-head.j2" %}
    {% else %}
      {% include "./_partials/post-head.j2" %}
    {% endif %}
    <div class="entry-box">
      {% if note.cover %}
        <img class="entry-cover u-photo" src="{{ note.cover|thumbnail('l') }}" alt="{{ note.title }} cover" />
      {% endif %}
      <div class="entry-box-inner">
        <div class="e-content">
          {% include "components/audio-player.j2" %}
          {{ note.content }}
        </div>
        <div class="flex justify-between items-center">
          {% include "./_partials/entry-tags.j2" %}
          <div class="enjoy-button">
            <button class="js-enjoy">Enjoy</button>
          </div>
        </div>
      </div>
    </div>
  </article>
  <section class="entry-box px-6 pt-4 pb-8">
    {% include "components/web-comment.j2" %}
  </section>
  {% include "./_layouts/site-foot.j2" %}
{% endblock %}
