{% block styles %}
<style>:root{ --background-color: {{ theme_background_color|default("#F8F7F6") }} }</style>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{ _static_url }}/base.css">
<link rel="stylesheet" href="{{ _static_url }}/archive.css">
{% endblock %}

{% block scripts %}
<script src="{{ _static_url }}/app.js" type="module"></script>
{% include "components/iconify-icon.j2" %}
{% endblock %}

{% block body %}
  {% include "./_layouts/site-head.j2" %}
  {% include "./_layouts/site-banner.j2" %}
  {% set notes = query.paginate_notes(per_page=20) %}
  {% if notes %}
    {% set note = notes[0] %}
    <article class="h-entry item featured">
      {% if note.audio and note.audio.image %}
        <a href="{{ note.url }}" class="item_image">
          <img src="{{ note.audio.image|thumbnail('sm') }}" alt="{{ note.title }} image">
        </a>
      {% endif %}
      <div class="item_wrap">
        <div class="item_meta">
          {% if note.audio %}
            <div class="item_label">
              {% set episode = note.audio %}
              {% if episode.season and episode.episode %}
                <span>S{{ episode.season }}E{{ episode.episode }}</span>
              {% elif episode.episode %}
                <span>E{{ episode.episode }}</span>
              {% endif %}
              <span class="item_duration">{{ episode.audio.duration|durationformat }}</span>
            </div>
          {% endif %}
          <div class="item_time">
            <time class="dt-published" datetime="{{ note.published_at|xmldatetime }}">{{ note.published_at|dateformat('%b %d, %Y') }}</time>
          </div>
        </div>
        <div class="item_info">
          <h2 class="p-name"><a href="{{ note.url }}">{{ note.title }}</a></h2>
          {% if note.subtitle %}
            <h3 class="p-summary">{{ note.subtitle }}</h3>
          {% endif %}
        </div>
        <div class="item_summary e-content">
          {% include "components/audio-player.j2" %}
          {{ note.content }}
        </div>
      </div>
    </article>
    {% for note in notes[1:] %}
      {% include "./_partials/entry-item.j2" %}
    {% endfor %}
  {% endif %}
  {% include "./_layouts/site-foot.j2" %}
{% endblock %}
